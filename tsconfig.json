{
  "compilerOptions" : {
    "strict" : true,
    "module" : "commonjs",
    "target" : "es6",
    "esModuleInterop" : true,
    "sourceMap" : true,
    "rootDir" : "src",
    "outDir" : "dist/js",
    "noEmitOnError" : true,
    "typeRoots" : [
      "node_modules/@types"
    ],
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": true,
    "noUncheckedIndexedAccess": true
  }
}